<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Talaba qo'shish"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2D3748"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/formCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/titleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:id="@+id/labelIsm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Ism"
                    android:textColor="#4A5568"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <EditText
                    android:id="@+id/ismEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Ismni kiriting"
                    android:inputType="textPersonName"
                    android:padding="12dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_edittext"
                    app:layout_constraintTop_toBottomOf="@+id/labelIsm"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/labelFamiliya"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Familiya"
                    android:textColor="#4A5568"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/ismEditText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <EditText
                    android:id="@+id/familiyaEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Familiyani kiriting"
                    android:inputType="textPersonName"
                    android:padding="12dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_edittext"
                    app:layout_constraintTop_toBottomOf="@+id/labelFamiliya"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/labelSinf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Sinf"
                    android:textColor="#4A5568"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/familiyaEditText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <EditText
                    android:id="@+id/sinfEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Masalan: 10A"
                    android:inputType="text"
                    android:padding="12dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_edittext"
                    app:layout_constraintTop_toBottomOf="@+id/labelSinf"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/labelGuruh"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Guruh"
                    android:textColor="#4A5568"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/sinfEditText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <EditText
                    android:id="@+id/guruhEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Masalan: 1"
                    android:inputType="text"
                    android:padding="12dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_edittext"
                    app:layout_constraintTop_toBottomOf="@+id/labelGuruh"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/saqlashButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Saqlash"
            android:textColor="#FFFFFF"
            android:backgroundTint="#E91E63"
            android:layout_marginTop="20dp"
            android:padding="14dp"
            app:layout_constraintTop_toBottomOf="@+id/formCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/bekorButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bekor qilish"
            android:textColor="#E91E63"
            android:backgroundTint="#FFFFFF"
            android:layout_marginTop="12dp"
            android:padding="14dp"
            app:layout_constraintTop_toBottomOf="@+id/saqlashButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
